*_override.tf.json
.terraformrc
terraform.rc

# Docker
.docker/
docker-compose.override.yml

# Kubernetes
*.kubeconfig
*-secret.yaml
*-secret.yml

# AWS
.aws/
.boto

# ============================================================================
# SAGE-REVIEW SPECIFIC
# ============================================================================

# MCP server logs
mcp-*.log

# Test fixtures with real data
tests/fixtures/real/

# Local config overrides
config.local.yaml
config.local.yml
config.local.json

# ============================================================================
# PARANOID MODE: Catch-all patterns
# ============================================================================

# Anything with "secret" in the name
*secret*
*SECRET*
!hooks/*-secrets.sh

# Anything with "password" in the name
*password*
*PASSWORD*

# Anything with "credential" in the name
*credential*
*CREDENTIAL*

# Anything with "private" in the name (except private methods in code)
*_private.*
*.private.*

